<Window x:Class="DemTrening1.Windows.wdAddIngradient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemTrening1.Windows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        Title="" Height="450" Width="800" FontSize="20">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Red"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <TextBox x:Name="tbColbach"/>
            <ComboBox x:Name="cbInghradient" Margin="0 15" materialDesign:HintAssist.Hint="Инградиент"/>

            <ComboBox x:Name="cbWorker" DisplayMemberPath="SurNameWorker" materialDesign:HintAssist.Hint="Сотрудник"/>
            
            <Button x:Name="btSave" Margin="0 15" Click="clAddSave">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Add" Foreground="#FFFFFF"/>
                        <TextBlock Text="Сохранить" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
